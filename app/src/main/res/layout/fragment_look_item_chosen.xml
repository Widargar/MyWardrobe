<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corners_weather"
    android:orientation="vertical"
    tools:context=".LookItemChosen">

    <ImageView
        android:id="@+id/look_item_chosen_img"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/look_item_chosen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/wood_brown"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/look_item_chosen_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/wood_brown"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/color"
                    android:textColor="@color/wood_brown"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img_color_look"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/color_black_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/type"
                    android:textColor="@color/wood_brown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/img_type_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_corners_bottom_nav"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/type"
                    android:textColor="@color/wood_brown"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/size"
                    android:textColor="@color/wood_brown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/img_size_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_corners_bottom_nav"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/size"
                    android:textColor="@color/wood_brown"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/season"
                    android:textColor="@color/wood_brown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/img_season_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_corners_bottom_nav"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/season"
                    android:textColor="@color/wood_brown"
                    android:textSize="20dp" />

            </LinearLayout>


        </GridLayout>

    </LinearLayout>

    <Button
        android:id="@+id/look_item_chosen_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="gone"
        app:backgroundTint="@color/wood_brown"/>


</LinearLayout>
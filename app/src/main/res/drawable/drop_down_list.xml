<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape>

            <solid android:color="@color/peach"/>

            <corners android:radius="80dp"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:bottom="5dp"/>

        </shape>

    </item>

    <item
        android:gravity="end"
        android:drawable="@drawable/drop_down_arrow">

        <shape>

            <padding android:right="5dp"/>

        </shape>

    </item>


</layer-list>